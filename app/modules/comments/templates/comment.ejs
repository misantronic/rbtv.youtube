<div class="profile-picture">
	<img class="thumb" src="<%= snippet.authorProfileImageUrl %>" alt="<%= snippet.authorDisplayName %>">
</div>
<div class="content-container">
	<div class="head">
		<div class="name">
			<a class="link" href="<%= snippet.authorChannelUrl %>" target="_blank">
				<%= snippet.authorDisplayName %>
			</a>
		</div>
		<div class="date"><%= snippet.publishedAt.fromNow() %></div>
	</div>

	<div class="body"><%= snippet.textDisplay || snippet.textOriginal %></div>

	<div class="foot">
		<button class="btn-reply">Antworten</button>
		<div class="region-thumbs"></div>
	</div>

	<div class="replies <% if(!snippet.totalReplyCount) { %>hide<% } %>">
		<a href="#" class="show-replies js-show-replies">Zeige <%- snippet.totalReplyCount %> Antworten</a>
	</div>
	<div class="region-replies"></div>
	<div class="loader js-loader">
		<div class="sk-fading-circle">
			<div class="sk-circle1 sk-circle"></div>
			<div class="sk-circle2 sk-circle"></div>
			<div class="sk-circle3 sk-circle"></div>
			<div class="sk-circle4 sk-circle"></div>
			<div class="sk-circle5 sk-circle"></div>
			<div class="sk-circle6 sk-circle"></div>
			<div class="sk-circle7 sk-circle"></div>
			<div class="sk-circle8 sk-circle"></div>
			<div class="sk-circle9 sk-circle"></div>
			<div class="sk-circle10 sk-circle"></div>
			<div class="sk-circle11 sk-circle"></div>
			<div class="sk-circle12 sk-circle"></div>
		</div>
	</div>
</div>